<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="order_added_luxury_product_form_view" model="ir.ui.view">
    <field name="name">sale.order.luxury.product.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <xpath expr="//notebook//tree//field[@name='name']" position="after">
        <field name="is_luxury_product"/>
      </xpath>

    </field>
  </record>
</odoo>
